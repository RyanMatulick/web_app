%html
  %head
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/font-awesome/4.6.0/css/font-awesome.min.css'
    = stylesheet_link_tag '//maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css'
    /= stylesheet_pack_tag 'application'
    /= stylesheet_link_tag 'application'
    = csrf_meta_tag
    %title Miracles
  %body.react-app
    = javascript_include_tag '//ajax.googleapis.com/ajax/libs/jquery/3.1.0/jquery.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/jquery-ujs/1.2.2/rails.min.js'
    = javascript_include_tag '//cdnjs.cloudflare.com/ajax/libs/tether/1.4.0/js/tether.min.js'
    = javascript_include_tag '//maxcdn.bootstrapcdn.com/bootstrap/4.0.0-alpha.6/js/bootstrap.min.js'
    = javascript_pack_tag 'application', crossorigin: 'anonymous'
    %div.main.container
      =yield
